{
  "name": "yaml-doctor",
  "displayName": "YAML Doctor",
  "description": "VS Code extension for YAML analysis and diagnostics using yaml-doctor",
  "version": "0.1.2",
  "publisher": "darioajr",
  "author": {
    "name": "Dario Alves Junior",
    "email": "darioajr@gmail.com"
  },
  "license": "Apache-2.0",
  "icon": "icon.png",
  "homepage": "https://github.com/darioajr/yaml-doctor",
  "repository": {
    "type": "git",
    "url": "https://github.com/darioajr/yaml-doctor-vscode.git",
    "directory": "vscode"
  },
  "bugs": {
    "url": "https://github.com/darioajr/yaml-doctor/issues"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "yaml",
    "docker-compose",
    "kubernetes",
    "github-actions",
    "linter",
    "analysis"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yaml-doctor.analyzeFile",
        "title": "Analyze Current YAML File",
        "category": "YAML Doctor"
      },
      {
        "command": "yaml-doctor.analyzeWorkspace",
        "title": "Analyze All YAML Files in Workspace",
        "category": "YAML Doctor"
      },
      {
        "command": "yaml-doctor.showReport",
        "title": "Show YAML Doctor Report",
        "category": "YAML Doctor"
      },
      {
        "command": "yaml-doctor.generateBadge",
        "title": "Generate YAML Doctor Badge",
        "category": "YAML Doctor"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "yaml-doctor.analyzeFile",
          "when": "resourceExtname == .yml || resourceExtname == .yaml",
          "group": "yaml-doctor"
        }
      ],
      "editor/context": [
        {
          "command": "yaml-doctor.analyzeFile",
          "when": "resourceExtname == .yml || resourceExtname == .yaml",
          "group": "yaml-doctor"
        }
      ],
      "commandPalette": [
        {
          "command": "yaml-doctor.analyzeFile",
          "when": "resourceExtname == .yml || resourceExtname == .yaml"
        }
      ]
    },
    "configuration": {
      "title": "YAML Doctor",
      "properties": {
        "yamlDoctor.dockerImage": {
          "type": "string",
          "default": "darioajr/yaml-doctor:latest",
          "description": "Docker image to use for YAML Doctor analysis"
        },
        "yamlDoctor.autoAnalyze": {
          "type": "boolean",
          "default": false,
          "description": "Automatically analyze YAML files on save"
        },
        "yamlDoctor.showDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Show diagnostics in the editor"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package-extension": "vsce package",
    "publish-extension": "vsce publish",
    "install-extension": "code --install-extension *.vsix"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "sharp": "^0.34.3",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  }
}
